show fex
    # Lists all FEX units connected to the Nexus switch
    # DevOps analogy: ls /sys/class/net (list network devices)

show fex <fex number> detail
    # Shows detailed info about a specific FEX (model, serial, uplinks, state)
    # DevOps analogy: cat /proc/net/bonding/bond0 (bond details)

show interface ethernet <port, e.g., 103/1/46>
    # Displays interface details: status, beacon state, errors, transceiver info
    # DevOps analogy: ip link show eth0 OR ethtool eth0

show mac address-table interface ethernet <port, e.g., 103/1/46>
    # Confirms VLAN, MAC address learned on that interface
    # DevOps analogy: arp -n OR bridge fdb show

show vlan id <id>
    # Shows VLAN name, status, and ports assigned to that VLAN
    # DevOps analogy: bridge vlan show

show ip arp vlan <id>
    # Displays ARP table for the VLAN (may be empty if IP forwarding is disabled)
    # DevOps analogy: ip neigh show

show vpc
    # Global list of all vPCs and their status
    # DevOps analogy: cat /proc/net/bonding/* (bond summary)

show vpc | include <port, e.g., Eth103/1/46>
    # Filters vPC output for a specific interface
    # DevOps analogy: grep eth0 /proc/net/bonding/bond0

show logging last 20
    # Shows the last 20 log messages
    # DevOps analogy: tail -n 20 /var/log/syslog

show interface status
    # Displays VLAN number, link status, and connected device info
    # DevOps analogy: ip -s link OR ifconfig

show interfaces description
    # Lists all interfaces with their descriptions (often used for identifying connected devices)
    # DevOps analogy: Comments in /etc/network/interfaces

####HEALTH CHECKS####

show interface ethernet <port> transceiver details
    # Shows TX/RX power, thresholds, and optic health
    # DevOps analogy: ethtool eth0 (but with optical DOM info)

show interface ethernet <port> counters
    # Displays packet counters, errors, drops
    # DevOps analogy: ip -s link OR ifconfig eth0

######BASIC CONFIG####
configure terminal
    # Enter global config mode
    # DevOps analogy: sudo vim /etc/network/interfaces

interface ethernet <port>
    # Enter interface config mode
    # DevOps analogy: Edit eth0 section in config file

shutdown
    # Disable interface
    # DevOps analogy: ip link set eth0 down

no shutdown
    # Enable interface
    # DevOps analogy: ip link set eth0 up

description <text>
    # Add description to interface
    # DevOps analogy: Add comment in config file

switchport access vlan <id>
    # Assign VLAN to access port
    # DevOps analogy: bridge vlan add dev eth0 vid <id>

show running-config
    # Show active config
    # DevOps analogy: cat /etc/network/interfaces

copy running-config startup-config
    # Save config to persistent storage
    # DevOps analogy: systemctl daemon-reload OR git commit